{
  "name": "react-webpack-starter",
  "private": true,
  "version": "0.0.1",
  "author": "dd",
  "engines": {
    "node": "0.10.x"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:dqdinh/react-webpack-starter.git"
  },

  "devDependencies": {
    "6to5": "2.13.3",

    "bundle-loader": "^0.5.2",
    "events": "1.0.2",
    "expect": "^1.1.0",

    "css-loader": "*",
    "file-loader": "^0.8.1",
    "jade": "^1.9.0",
    "jsxhint": "^0.8.1",
    "jsx-loader": "^0.12.2",
    "style-loader": "^0.8.3",
    "stylus": "^0.49.3",
    "stylus-loader": "^0.5.0",
    "url-loader": "^0.5.5",

    "chai": "^1.10.0",
    "mocha": "^2.0.1",
    "karma": "^0.12.28",
    "karma-chrome-launcher": "^0.1.7",
    "karma-cli": "0.0.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-mocha": "^0.1.10",
    "karma-sourcemap-loader": "^0.3.2",
    "karma-webpack": "^1.3.1",

    "rf-release": "0.4.0",
    "rx": "2.3.18",

    "webpack": "^1.4.15",
    "webpack-dev-server": "^1.7.0"
  },

  "dependencies": {
    "react": "0.12.x",
    "react-router": "^0.11.6"
  },

  "scripts": {
    "clean": "rm -rf ./node_modules/ ./bower_components/",
    "deps": "npm install --quiet --loglevel warn && ./node_modules/bower/bin/bower install --quiet",
    "upgrade": "./node_modules/npm-check-updates/bin/npm-check-updates -u &&  ./node_modules/bower/bin/bower update && npm test",

    "jade": "jade --watch ./src/html/*.jade --pretty --out ./build",
    "stylus": "stylus --watch ./src/styles/*.styl --out ./build",
    "webpack": "webpack",
    "browsertest": "./node_modules/nightwatch/bin/nightwatch -e firefox,chrome",

    "build": "NODE_ENV=production webpack index.js dist/react-router.js",
    "build-min": "NODE_ENV=production COMPRESS=1 webpack index.js dist/react-router.min.js",
    "examples": "webpack-dev-server --config examples/webpack.config.js --no-info --content-base examples",
    "test": "jsxhint . && karma start --single-run",

    "dev": "npm run jade & npm run stylus",
    "stage": "npm test && npm run build && npm run browsertest",

    "prod": "npm run jade-prod & npm run stylus-prod",
    "stylus-prod": "stylus --watch ./src/styles/*.styl --out ./dist.",
    "jade-prod": "jade --watch ./src/html/*.jade --out ./dist",
    "dist": "npm test && npm run prod && npm run browsertest"
  }
}
